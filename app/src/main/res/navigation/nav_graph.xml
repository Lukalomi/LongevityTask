<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authorization"
   >

    <fragment
        android:id="@+id/authorization"
        android:name="com.example.longevitytask.ui.Authorization"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" >
        <action
            android:id="@+id/action_authorization_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_authorization_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.longevitytask.ui.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/main" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.longevitytask.ui.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >

        <action
            android:id="@+id/action_register_to_main"
            app:destination="@id/main" />
    </fragment>
    <fragment
        android:id="@+id/main"
        android:name="com.example.longevitytask.ui.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_main_to_authorization"
            app:destination="@id/authorization" />
    </fragment>
</navigation>